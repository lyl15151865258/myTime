<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.liyuliang.mytime.widget.MyToolbar
        android:id="@+id/myToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:titleText="@string/app_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_50">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <com.liyuliang.mytime.widget.imageview.SquareByWidthImageView
                android:id="@+id/ivUserIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:scaleType="centerCrop"
                android:src="@drawable/photo_user" />

        </LinearLayout>

        <com.liyuliang.mytime.widget.MyButton
            android:id="@+id/btnTakePhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorGreenPrimary"
            android:text="拍照上传"
            android:textColor="@color/white" />

        <com.liyuliang.mytime.widget.MyButton
            android:id="@+id/btnSelectFromAlbum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorGreenPrimary"
            android:text="从相册中选择"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llUserInfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:background="@drawable/bg_headportrait"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivUserIcon"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:contentDescription="@null"
            android:src="@drawable/photo_user" />

        <com.liyuliang.mytime.widget.textview.MyTextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_gray"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.liyuliang.mytime.widget.textview.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:text="@string/BasicSettings"
                        android:textSize="@dimen/sp_18" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llPersonalInformation"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@drawable/background_item_list_selector"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_5">

                    <com.liyuliang.mytime.widget.textview.MyTextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/icon_main_account"
                        android:drawablePadding="@dimen/dp_5"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_10"
                        android:text="@string/AccountInformation"
                        android:textSize="@dimen/sp_16" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_arrow_right" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/gray_slight" />

                <LinearLayout
                    android:id="@+id/llLanguageSettings"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@drawable/background_item_list_selector"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_5">

                    <com.liyuliang.mytime.widget.textview.MyTextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/icon_language"
                        android:drawablePadding="@dimen/dp_5"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_10"
                        android:text="@string/LanguageSettings"
                        android:textSize="@dimen/sp_16" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_arrow_right" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.liyuliang.mytime.widget.textview.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:text="@string/VersionAndShare"
                        android:textSize="@dimen/sp_18" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llVersion"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@drawable/background_item_list_selector"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_5">

                    <com.liyuliang.mytime.widget.textview.MyTextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/icon_version"
                        android:drawablePadding="@dimen/dp_5"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_10"
                        android:text="@string/VersionView"
                        android:textSize="@dimen/sp_16" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_arrow_right" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/gray_slight" />

                <LinearLayout
                    android:id="@+id/llUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@drawable/background_item_list_selector"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_5">

                    <com.liyuliang.mytime.widget.textview.MyTextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/icon_update"
                        android:drawablePadding="@dimen/dp_5"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_10"
                        android:text="@string/VersionUpdate"
                        android:textSize="@dimen/sp_16" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_arrow_right" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/gray_slight" />

                <LinearLayout
                    android:id="@+id/llShare"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@drawable/background_item_list_selector"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_5">

                    <com.liyuliang.mytime.widget.textview.MyTextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/icon_share"
                        android:drawablePadding="@dimen/dp_5"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp_10"
                        android:text="@string/ShareToOthers"
                        android:textSize="@dimen/sp_16" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_arrow_right" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/ll_login_account"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_item_list_selector"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_36"
                        android:layout_height="@dimen/dp_36"
                        android:contentDescription="@null"
                        android:padding="@dimen/dp_5"
                        android:src="@drawable/icon_login_account" />

                    <com.liyuliang.mytime.widget.textview.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/LoginAccount"
                        android:textSize="@dimen/sp_18" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/ll_sign_out"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_item_list_selector"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_36"
                        android:layout_height="@dimen/dp_36"
                        android:contentDescription="@null"
                        android:padding="@dimen/dp_5"
                        android:src="@drawable/icon_sign_out" />

                    <com.liyuliang.mytime.widget.textview.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_item_list_selector"
                        android:text="@string/Logout"
                        android:textSize="@dimen/sp_18" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.liyuliang.mytime.widget.MyToolbar
        android:id="@+id/myToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:titleText="@string/app_name" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llUserIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_item_list_selector"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5">

                <com.liyuliang.mytime.widget.textview.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_10"
                    android:text="@string/ProfilePhoto"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivUserIcon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/photo_user" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_slight" />

            <LinearLayout
                android:id="@+id/llUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_item_list_selector"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5">

                <com.liyuliang.mytime.widget.textview.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:padding="@dimen/dp_10"
                    android:text="@string/Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16" />

                <com.liyuliang.mytime.widget.textview.MyTextView
                    android:id="@+id/tvUserName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:maxLines="2"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_5"
                    android:textSize="@dimen/sp_14"
                    app:drawableEndCompat="@drawable/ic_arrow_right" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_slight" />

            <LinearLayout
                android:id="@+id/llGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_item_list_selector"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5">

                <com.liyuliang.mytime.widget.textview.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:padding="@dimen/dp_10"
                    android:text="@string/Gender"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16" />

                <com.liyuliang.mytime.widget.textview.MyTextView
                    android:id="@+id/tvGender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:gravity="end"
                    android:maxLines="2"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_5"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_slight" />

            <LinearLayout
                android:id="@+id/llPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_item_list_selector"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5">

                <com.liyuliang.mytime.widget.textview.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:padding="@dimen/dp_10"
                    android:text="@string/Phone"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16" />

                <com.liyuliang.mytime.widget.textview.MyTextView
                    android:id="@+id/tvPhoneNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:gravity="end"
                    android:maxLines="2"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_5"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_slight" />

            <LinearLayout
                android:id="@+id/llMailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_item_list_selector"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5">

                <com.liyuliang.mytime.widget.textview.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:padding="@dimen/dp_10"
                    android:text="@string/Mail"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16" />

                <com.liyuliang.mytime.widget.textview.MyTextView
                    android:id="@+id/tvMailAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:gravity="end"
                    android:maxLines="2"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_5"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_slight" />

            <LinearLayout
                android:id="@+id/llRegisterTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_item_list_selector"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5">

                <com.liyuliang.mytime.widget.textview.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:padding="@dimen/dp_10"
                    android:text="@string/RegisterTime"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16" />

                <com.liyuliang.mytime.widget.textview.MyTextView
                    android:id="@+id/tvRegisterTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:maxLines="2"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_5"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_slight" />

            <LinearLayout
                android:id="@+id/llModifyPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_item_list_selector"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5">

                <com.liyuliang.mytime.widget.textview.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:padding="@dimen/dp_10"
                    android:text="@string/ChangePassword"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16" />

                <com.liyuliang.mytime.widget.textview.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:gravity="end"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_5"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_slight" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>

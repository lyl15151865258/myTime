<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <com.liyuliang.mytime.widget.imageview.SquareByWidthImageView
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_180"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/biglogo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_45"
        android:paddingBottom="@dimen/dp_45">

        <com.liyuliang.mytime.widget.textview.MyTextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/colorGreenPrimary"
            android:textSize="@dimen/sp_26"
            android:textStyle="bold" />

        <com.liyuliang.mytime.widget.textview.MyTextView
            android:id="@+id/tvDescribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="方 便    高 效    安 全"
            android:textColor="@color/colorGreenPrimary"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

</LinearLayout>